{
  "name": "reelnet",
  "version": "1.0.0",
  "description": "AI-powered English learning platform for reading, listening, speaking, and writing skills",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "ai-service"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\" \"npm run start:ai\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && ./mvnw spring-boot:run",
    "start:ai": "cd ai-service && npm run dev",
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:ai",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && ./mvnw clean install -DskipTests",
    "install:ai": "cd ai-service && npm install",
    "build": "npm run build:frontend && npm run build:backend && npm run build:ai",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && ./mvnw clean package -DskipTests",
    "build:ai": "cd ai-service && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:ai",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && ./mvnw test",
    "test:ai": "cd ai-service && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:ai",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && ./mvnw checkstyle:check",
    "lint:ai": "cd ai-service && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "keywords": [
    "english-learning",
    "ai",
    "education",
    "react",
    "vite",
    "typescript",
    "spring-boot",
    "java",
    "fullstack"
  ],
  "author": "ReelNet Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "prettier": "^2.8.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
